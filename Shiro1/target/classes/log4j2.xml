<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--先定义所有的appendeer-->
    <appenders>
        <!--输出控制台的配置-->
        <console name="Console" target="SYSTEM_OUT">
            <!--输出日志格式-->
            <patternlayout pattern="[DEBUG] %m %n"/>
        </console>
    </appenders>
    <loggers>
        <root level="ERROR">
            <!--输出控制台-->
            <appender-ref ref="Console"/>
        </root>
    </loggers>
</configuration>